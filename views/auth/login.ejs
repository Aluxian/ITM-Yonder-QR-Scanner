<div class="container small-container small-container-top-margin">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Log in</h3>
    </div>
    <div class="panel-body">
      <% if (errors) {%>
        <% errors.forEach(function (error) { %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <%= __(error) %>
          </div>
        <% }) %>
      <% } %>

      <form class="form-horizontal container-fluid" role="form" action="/auth/local" method="post">
        <fieldset>
          <div class="form-group">
            <input class="form-control" id="inputEmail" type="text" name="identifier" placeholder="Username or Email" required autofocus>
          </div>
          <div class="form-group">
            <input class="form-control" id="inputPassword" type="password" name="password" placeholder="Password" required>
          </div>
          <button type="submit" class="btn btn-primary pull-right">Submit<div class="ripple-wrapper"></div></button>
        </fieldset>
      </form>

      <% if (Object.keys(providers).length) {%>
        <h4>You can also use one of these...</h4>

        <% Object.keys(providers).forEach(function (key) { %>
          <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
        <% }) %>
      <% } %>
    </div>
  </div>

  <p class="text-center">
    <a href="/register">Create an account</a>
  </p>
</div>
